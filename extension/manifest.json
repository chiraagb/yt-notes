{
  "manifest_version": 3,
  "name": "YouTube Notes & Transcript",
  "version": "1.0",
  "description": "Generate fast transcripts and notes for YouTube videos",

  "permissions": ["activeTab"],

  "host_permissions": ["https://www.youtube.com/*", "http://localhost:8000/*"],

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "service_worker": "background.js"
  }
}
